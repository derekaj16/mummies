            </svg>
            <div class="mx-2">Filter Options</div>
        </button>

        @foreach (Mummy m in ViewBag.MummyList)
{
                <div>
                    <h3>Id: @m.mummyId</h3>
                    <p>
                        Depth: @m.burialDepth<br />
                        Age: @m.ageAtDeath<br />
                        Hair Color: @m.hairColor
                    </p>

                </div>
}


