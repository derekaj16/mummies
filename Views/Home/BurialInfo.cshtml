<div page-model="@Model.pageInfo" burials-view-model="@Model" page-action="BurialInfo" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>


@* FILTERING MODAL *@

<div class="modal fade" id="filter" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Bring out ya dead!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form" method="get" asp-action="BurialInfo">
                    @*<label class="form-label">Distance (m)</label>
                        <input class="form-control" list="northSouthOptions" id="squareNorthSouth" asp-for="squareNorthSouth">
                        <datalist id="squareNorthSouth" asp-for="squareNorthSouth">
                            @for (int i = 0; i <= 500; i = i + 10)
                            {
                                <option value="@i">@i/@(i+10)</option>
                            }
                        </datalist>

                        <label class="form-label" asp-for="northSouth">N/S</label>
                        <select class="form-select" asp-for="northSouth">
                            <option value=""></option>
                            <option value="N">N</option>
                            <option value="S">S</option>
                        </select>

                        <label class="form-label">Distance (m)</label>
                        <input class="form-control" list="eastWestOptions" id="squareEastWest" asp-for="squareEastWest">
                        <datalist id="eastWestOptions" asp-for="squareEastWest">
                            @for (int i = 0; i <= 500; i = i + 10)
                            {
                                <option value="@i">@i/@(i+10)</option>
                            }

                        </datalist>

                        <label class="form-label" asp-for="eastWest">E/W</label>
                        <select class="form-select" asp-for="eastWest">
                            <option value=""></option>
                            <option value="E">E</option>
                            <option value="W">W</option>
                        </select>*@
                    @*
                        <label class="form-label" asp-for="textileColor">Textile Color</label>
                        <select class="form-select" asp-for="textileColor">
                            <option value=""></option>
                            @foreach (Color color in ViewBag.Colors)
                            {
                                <option value="@color.Id">@color.Value</option>
                            }
                        </select>

                        <label class="form-label" asp-for="textileFunction">Textile Function</label>
                        <input class="form-control" list="textileOptions" id="textileList"  asp-for="textileFunction">
                        <datalist id="textileOptions" asp-for="textileFunction">
                            @foreach (String textile in ViewBag.TextileFunctions)
                            {
                                <option value="@textile">@textile</option>
                            }
                        </datalist>  *@

                    <label class="form-label" asp-for="burialDepth">Depth</label>
                    <select class="form-select" asp-for="burialDepth">
                        <option value="">All</option>
                        @for (Double depth = 0.0; depth < 5.0; depth = depth + 0.5)
                        {
                            <option value="@(depth + 0.5)">@depth - @(depth + 0.49)</option>
                        }
                    </select>

                    <label class="form-label" asp-for="ageAtDeath">Age</label>
                    <select class="form-select" asp-for="ageAtDeath" name="ageAtDeath">
                        <option value="">All</option>
                        @foreach (String age in ViewBag.Ages)
                        {
                            @switch (age)
                            {
                                case "N":
                                    <option value="@age">
                                        @Html.Raw("Newborn")
                                    </option>
                                    break;
                                case "I":
                                    <option value="@age">
                                        @Html.Raw("Infant")
                                    </option>
                                    break;
                                case "C":
                                    <option value="@age">
                                        @Html.Raw("Child")
                                    </option>
                                    break;
                                case "A":
                                    <option value="@age">
                                        @Html.Raw("Adult")
                                    </option>
                                    break;
                                case "U":
                                    <option value="@age">
                                        @Html.Raw("Unknown")
                                    </option>
                                    break;
                                default:
                                    break;
                            }
                        }

                    </select>

                    <label class="form-label" asp-for="hairColor">Hair Color</label>
                        <select class="form-select" asp-for="hairColor">
                            <option value="">All</option>
                            @foreach(var color in ViewBag.HairViewModel.HairColorDict)
                            {
                                <option value="@color.Key">@color.Value</option>
                            }
                        </select>
                    <hr />
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </form>
            </div>
        </div>
    </div>
</div>


